<div class='article-container'>
  <header>
    <div class='site-title'>
      <%= image_tag 'myblog-title'%>
    </div>
    <% if user_signed_in? %>
      <div class='to-userpage'>
        <%= image_tag 'men_icon.png' %>
      </div>
    <% else %>
      <div class='to-userpage'>
        <div class='signin-btn'>
          <%= link_to 'ログイン', user_session_path%>
        </div>
      </div>
    <% end %>
  </header>

  <div class='main-content article-content clearfix'>
    <div class='articles-list'>
      <div class='top-articles'>
        <h1 class='top-articles__head'>
          トップ記事
        </h1>
        <div class='top-article-content'>

          <div class='top-articles__box'>
            <div class='image-box'>
            </div>
            <div class='top-article-right'>
              <div class='article-title'>
                <p>ブログ始めました
              </div>
              <div class='article-tags'>
                <h2>タグ：
                <%# ここで繰り返し処理 %>
                <li> グルメ
              </div>
              <div class='article-favorites'>
                ☆<span>10
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render partial: 'shared/side'%>

  </div>

  <footer>
  </footer>
</div>